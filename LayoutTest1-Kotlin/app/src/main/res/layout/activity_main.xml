<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow>
            <EditText
                android:layout_weight="1"
                android:layout_span="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/edt1"/>
        </TableRow>

        <TableRow>
            <EditText
                android:layout_weight="1"
                android:layout_span="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/edt2"/>
        </TableRow>

        <TableRow>
            <Button
                android:textSize="20dp"
                android:layout_weight="1"
                android:id="@+id/btn0"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="20dp"
                android:layout_weight="1"
                android:id="@+id/btn1"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="20dp"
                android:layout_weight="1"
                android:id="@+id/btn2"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="20dp"
                android:layout_weight="1"
                android:id="@+id/btn3"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="20dp"
                android:layout_weight="1"
                android:id="@+id/btn4"
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow>
            <Button
                android:textSize="20dp"
                android:layout_weight="1"
                android:id="@+id/btn5"
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="20dp"
                android:layout_weight="1"
                android:id="@+id/btn6"
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="20dp"
                android:layout_weight="1"
                android:id="@+id/btn7"
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="20dp"
                android:layout_weight="1"
                android:id="@+id/btn8"
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="20dp"
                android:layout_weight="1"
                android:id="@+id/btn9"
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow
            android:layout_margin="10dp">
            <Button
                android:layout_weight="1"
                android:text="더하기"
                android:textSize="20dp"
                android:layout_span="5"
                android:id="@+id/btnSum"/>
        </TableRow>
        <TableRow
            android:layout_margin="10dp">
            <Button
                android:layout_weight="1"
                android:text="빼기"
                android:textSize="20dp"
                android:layout_span="5"
                android:id="@+id/btnMin"/>
        </TableRow>
        <TableRow
            android:layout_margin="10dp">
            <Button
                android:layout_weight="1"
                android:text="곱하기"
                android:textSize="20dp"
                android:layout_span="5"
                android:id="@+id/btnMul"/>
        </TableRow>
        <TableRow
            android:layout_margin="10dp">
            <Button
                android:layout_weight="1"
                android:text="나누기"
                android:textSize="20dp"
                android:layout_span="5"
                android:id="@+id/btnDiv"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="1"
                android:id="@+id/result"
                android:layout_span="5"
                android:textSize="25dp"
                android:textColor="#FF0000"/>
        </TableRow>
    </TableLayout>




</LinearLayout>